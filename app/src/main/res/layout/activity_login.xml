<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/logbackground"
    >


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/email"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:drawablePadding="12dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"


            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:passwordToggleEnabled="true"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:drawablePadding="12dp"
            android:hint="password"
            android:inputType="textPassword"
            android:password="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="268dp"
            android:layout_height="75dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-205dp"
            android:text="Learning Platform"
            android:textColor="@color/purple_200"
            android:textSize="20dp"


            />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/login"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/nn"
        android:backgroundTintMode="add"
        android:foregroundTint="#120F0F"
        android:text="LogIn"
        android:textColor="#F0F6F5"
        android:textColorHighlight="#AC2323"
        android:textSize="24sp"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/fPassword"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-100dp"
        android:text="Forget Password"
        android:textAllCaps="true"
        android:textColor="#060132"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageButton2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="400dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_below="@+id/login"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="-102dp"
        app:srcCompat="@android:drawable/checkbox_off_background"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="397dp" />

    <ImageButton
        android:id="@+id/inster"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:layout_below="@+id/login"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/inster"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="640dp" />

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_below="@+id/login"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/twitter1"

        />

    <ImageButton
        android:id="@+id/facebook_btn"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_below="@+id/create"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/facebook"

        />

    <Button

        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/nsgreen"
        android:text="Create a new account"
        android:textSize="15dp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="381dp"
        android:layout_height="189dp"
        android:layout_marginLeft="10dp"

        app:srcCompat="@drawable/nsbmlogo"

        />



</RelativeLayout>